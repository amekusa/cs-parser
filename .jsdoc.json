{
	"tags": {
		"allowUnknownTags": true,
		"dictionaries": ["jsdoc"]
	},
	"source": {
		"include": ["src", "package.json", "README.md"],
		"includePattern": ".js$",
		"excludePattern": "(node_modules/|docs)"
	},
	"plugins": [
		"plugins/markdown"
	],
	"opts": {
		"destination": "./docs/",
		"encoding": "utf8",
		"private": false,
		"recurse": true,
		"template": "node_modules/minami"
	},
	"templates": {
		"default": {
			"layoutFile": "./theme/layout.tmpl",
			"staticFiles": {
				"include": [
					"./theme"
				],
				"exclude": [
					"./theme/layout.tmpl"
				]
			}
		}
	}
}
